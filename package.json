    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "start": "ts-node src/index.ts",
    "lint": "eslint ."
  },
  "author": "Rakesh K <codersgyan@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.1.7",
    "jest": "^29.6.4",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "dependencies": {
    "config": "^3.3.12",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-jwt": "^8.4.1",
    "express-validator": "^7.2.0",
    "http-errors": "^2.0.0",
    "js-yaml": "^4.1.0",
    "jwks-rsa": "^3.1.0",
    "mongoose": "^8.8.3",
